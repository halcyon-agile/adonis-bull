{
  "name": "@halcyon-agile/adonis-bull",
  "description": "The easiest way to start using an asynchronous job queue with AdonisJS. Supports version 5 and 4.x",
  "version": "1.0.10",
  "main": "build/providers/BullProvider.js",
  "types": "build/adonis-typings/index.d.ts",
  "license": "MIT",
  "scripts": {
    "test": "node japaFile.js",
    "coverage": "nyc --reporter=lcov --reporter=text-summary npm run test",
    "copyfiles": "copyfiles \"templates/**/*.txt\" build",
    "compile": "tsc",
    "prebuild": "rimraf ./build",
    "build": "npm run compile && npm run copyfiles",
    "lint": "eslint --ignore-path .gitignore",
    "format": "prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "prepublishOnly": "npm run build",
    "publish:alpha": "np --branch=alpha --tag=alpha"
  },
  "np": {
    "yarn": false,
    "contents": ".",
    "anyBranch": false
  },
  "publishConfig": {
    "access": "public"
  },
  "nyc": {
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ]
  },
  "directories": {
    "test": "test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint --fix",
      "yarn format"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "keywords": [
    "bull",
    "queue",
    "adonis",
    "adonisjs",
    "adonis-js",
    "adonis-bull",
    "adonis-queue"
  ],
  "bugs": {
    "url": "https://github.com/halcyon-agile/adonis-bull/issues"
  },
  "homepage": "https://github.com/halcyon-agile/adonis-bull#readme",
  "devDependencies": {
    "@adonisjs/ace": "^11.0.1",
    "@adonisjs/application": "^5.1.2",
    "@adonisjs/core": "^5.1.6",
    "@adonisjs/fold": "^8.1.2",
    "@adonisjs/logger": "^4.0.2",
    "@adonisjs/mrm-preset": "^3.0.0",
    "@adonisjs/sink": "^5.1.3",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^12.0.1",
    "@poppinss/dev-utils": "^1.0.11",
    "@types/node": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "copyfiles": "^2.3.0",
    "coveralls": "^3.0.7",
    "delay": "^4.3.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.3.8",
    "japa": "^3.1.1",
    "lint-staged": "^10.5.3",
    "np": "^7.3.0",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "~4.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/halcyon-agile/adonis-bull.git"
  },
  "peerDependencies": {
    "@adonisjs/core": "^5.0.4-preview-rc"
  },
  "dependencies": {
    "@bull-board/api": "^4.2.2",
    "@bull-board/express": "^4.2.2",
    "@bull-board/ui": "^4.2.2",
    "bullmq": "^1.24.5"
  },
  "files": [
    "build/adonis-typings",
    "build/commands",
    "build/providers",
    "build/src",
    "build/templates",
    "build/instructions.js",
    "build/instructions.d.ts"
  ],
  "typings": "build/adonis-typings/index.d.ts",
  "adonisjs": {
    "instructions": "./build/instructions.js",
    "types": "@halcyon-agile/adonis-bull",
    "providers": [
      "@halcyon-agile/adonis-bull"
    ],
    "commands": [
      "@halcyon-agile/adonis-bull/build/commands"
    ]
  },
  "author": "Halcyon Agile"
}
